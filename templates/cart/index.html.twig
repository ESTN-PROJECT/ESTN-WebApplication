



<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="{{ asset('https://kit.fontawesome.com/165c102389.js')}}" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="{{ asset('dashboard/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('dashboard/css/dataTables.bootstrap5.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('dashboard/css/style.css') }}"/>
    <title>Dashboard</title>
</head>
<body>
</body>



<main class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row"></div>
        <br/>
    </div>
</main>


<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: -50px;">

    <div class="col-lg-12">

        <main class="card-body">
            <i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i>
            <div class="bg-light p-3">
                <h1>Votre panier</h1>
            </div>
            {% if items | length >0 %}

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>quantit√©</th>
                        <th>total</th>
                        <th>photo</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>

                            <td>{{ item.produit.nom }}</td>
                            <td>{{ item.produit.prix }} DT</td>
                            <td>{{  item.quantity }}</td>
                            <td>{{ item.produit.prix * item.quantity }} DT</td>
                            <td> <img style="width: 100px; height:100px" src="{{asset('uploads/images/') ~ item.produit.photo }}" class="img-responsive" alt="Image"></td>

                            <td>
                                <a href="{{ path('cart_add',{'id':item.produit.id}) }}" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </td>

                            <td>
                                <a href="{{ path('cart_remove',{'id':item.produit.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-minus"></i>
                                </a>
                            </td>

                            <td>
                                <a href="{{ path('cart_delete',{'id':item.produit.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa fa-trash"></i>
                                </a>
                            </td>





                        </tr>



                    {% endfor %}


                    </tbody>
                    <tfoot>


                    <tr>
                        <td  colspan="3" class="text-right">Total TTC  :</td>

                        <td> {{total}}  </td>

                        <td>    <td>
                            <a href="{{ path('cart_deleteall') }}" class="btn btn-danger btn-sm">
                                <i class="fas fa fa-trash"></i>
                            </a>
                        </td>        </td>

                    </tr>


                    </tfoot>

                </table>


                <br>

                <form action="{{ '/checkout"' }}" method="POST">
                    <button type="submit" class="btn btn-primary btn-lg">PAYER ({{ total }}) DT</button>
                </form>
                </br>
            {% else  %}
                <p>Surprise, c'est vide !</p>
            {% endif  %}


            <a href="{{ '/afficherF' }}" class="text-body"><i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a>

            <div>


            </div>

        </main>
    </div>
</div>

</div>






