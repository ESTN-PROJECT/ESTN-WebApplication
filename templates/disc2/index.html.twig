{% extends 'baseBack.html.twig' %}

{% block title %}Discussion index{% endblock %}

{% block body %}
    <h1>Discussion index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Contenu</th>
            <th>Archive</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td>{{ discussion.id }}</td>
                <td>{{ discussion.contenu }}</td>
                <td>{{ discussion.archive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_disc2_show', {'id': discussion.id}) }}">show</a>
                    <a href="{{ path('app_disc2_edit', {'id': discussion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_disc2_new') }}">Create new</a>
{% endblock %}
