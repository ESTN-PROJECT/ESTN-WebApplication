{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">ADD JEU</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-5 col-form-label">NOM</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}


                    </div>
                      {{ form_errors(form.nom,{'attr':{'class':'form-danger'}}) }}





                    <label for="inputText" class="col-sm-5 col-form-label">Description</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(form.description,{'attr':{'class':'form-danger'}}) }}

                    <label for="inputText" class="col-sm-5 col-form-label">categorie</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.categorie,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(form.categorie,{'attr':{'class':'form-danger'}}) }}

                    <br/>

                    <div class="col-sm-12" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.image) }}
                    </div>
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>


                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>










{% endblock %}


