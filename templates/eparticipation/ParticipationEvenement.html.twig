{% extends 'base.html.twig' %}


{% block title %}Hello EparticipationController!{% endblock %}

{% block body %}
  {#  <!-- Table with stripped rows -->
    <table class="table table-striped">
        <thead>
        <tr>

            <th>event title</th>
            <th>event description</th>
            <th>event date</th>
            <th>Participate</th>

        </tr>
        </thead>
  #}

    <tbody>
        {% for evenement in e %}
            <tr>

                <td>{{ evenement.titreEvent }}</td>
                <td>{{ evenement.descriptionEvent }}</td>
                <td>{{ evenement.dateEvent.format('d/m/Y') }}</td>
                <td>    <img src="{{ qr_code_data_uri(evenement.__toString()) }}" /></td>
                <td>
                    <a class="btn btn-danger" href="{{ path('prtevenement',{'id':evenement.idEvent}) }}">Participate</a>
                </td>

            </tr>

        {% endfor %}

        </tbody>
    </table>
    <!-- End small tables -->
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


{% endblock %}



