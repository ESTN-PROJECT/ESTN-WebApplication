            opacity:1;
        }
        @media (max-width: 768px){
            .table theadx{
                display: none;
            }
            .table, table tbody,.table td{
                display: none;
                display: block;
                width: 100%
            }

        }
            .table tr{
                    margin-bottom: 15px;}
.table tr{
    margin_bottom:15px;
}
.table tbody tr td{
    text-align : right;
    padding-left:50%;
    position: relative;
}
.table td:before{
    content: attr(data_label);
    position: absolute;
    left:0;
    width: 50%;
    padding-left:15px;
    font-weight: 600;
    font-size: 14px;
    text-align: left;
}



    </style>






    <table class="table table-striped" style="border: 1px solid; border-collapse: collapse; width:100%;">
        <thead style ="border: 1px solid">
        <tr>

            <th style ="border: 1px solid">Title</th>
            <th style ="border: 1px solid">Description</th>
            <th style ="border: 1px solid">Date</th>


        </tr>
        </thead>
        <tbody>
        {% for evenement in e %}
            <tr>

                <td style ="border: 1px solid">{{ evenement.titreEvent }}</td>
